<b>{{ 'Report was last updated'|t }} {{updated}} {{ 'ago'|t }}.</b><br/>
<ul class="action-links">
  <li><a href="/admin/config/cloud-api/refresh" class="button">{{ 'Refresh Report'|t }}</a></li>
</ul>
{% if report -%}
{% for site in report.sites %}
  <table>
    <thead>
      <tr>
        <th>{{site.name}}</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <table>
            <thead>
              <tr>
                <th>Parameter</th>
                <th>Value</th>
              </tr>
            </thead>
            <tbody>
              {% for parameter, value in site.info %}
              <tr>
                <td>{{parameter}}</td>
                <td>{{value}}</td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
          <a href="/admin/config/cloud-api/add/key/{{site.name}}">{{ 'Add SSH Key to this site'|t }}</a>
          <table>
            <thead>
              <tr>
                <th>SSH Key Nick Name</th>
                <th>SSH Key</th>
                <th>Delete</th>
              </tr>
            </thead>
            <tbody>
              {% for ssh in site.keys %}
              <tr>
                <td>{{ssh.nickname}}</td>
                <td>{{ssh.short}}</td>
                <td><a href="/admin/config/cloud-api/delete/key/{{site.name}}/{{ssh.id}}/{{ssh.nickname}}">{{ 'Delete Key'|t }}</td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
          <table>
            <thead>
              <tr>
                <th>Databases</th>
              </tr>
            </thead>
            <tbody>
              {% for database in site.dbs %}
              <tr>
                <td>{{database}}</td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
          <table>
            <thead>
              <tr>
                <th>Environment</th>
                <th>Environment Details</th>
              </tr>
            </thead>
            <tbody>
              {% for environment in site.environments %}
              <tr>
                <td>{{environment.name}}</td>
                <td>
                  <a href="/admin/config/cloud-api/add/domain/{{site.name}}/{{environment.name}}">{{ 'Add Domain to this environment'|t }}</a>
                  <table>
                    <thead>
                      <tr>
                        <th>Domain</th>
                        <th>Delete</th>
                        <th>Purge Varnish</th>
                      </tr>
                    </thead>
                    <tbody>
                      {% for domain in environment.domains %}
                      <tr>
                        <td>{{domain}}</td>
                        <td><a href="/admin/config/cloud-api/delete/domain/{{site.name}}/{{environment.name}}/{{domain}}">{{ 'Delete Domain'|t }}</td>
                        <td><a href="/admin/config/cloud-api/purge/domain/{{site.name}}/{{environment.name}}/{{domain}}">{{ 'Purge Varnish Cache'|t }}</td>          
                      </tr>
                      {% endfor %}
                    </tbody>
                  </table>
                  {% for server in environment.servers %}
                  <table>
                    <thead>
                      <tr>
                        <th>{{server.name}}</th>
                        <th></th>
                      </tr>
                    </thead>
                    <tbody>
                      {% for parameter, value in server.info %}
                      {% if value -%}
                      <tr>
                        <td>{{parameter}}</td>
                        <td>{{value}}</td>      
                      </tr>
                      {%- endif -%}
                      {% endfor %}
                    </tbody>
                  </table>
                  {% endfor %}
                </td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
          <table>
            <thead>
              <tr>
                <th>Time Started</th>
                <th>Status</th>
                <th>Task Details</th>
              </tr>
            </thead>
            <tbody>
              {% for task in site.tasks %}
              <tr>
                <td>{{task.started}}</td>
                <td>{{task.state}}</td>
                <td>{{task.description}}</td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </td>
      </tr>
    </tbody>
  </table>
{% endfor %}
{%- else -%}
  <p>{{ 'Report not generated yet.'|t }}</p>
{%- endif -%}